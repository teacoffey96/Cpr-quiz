<body>
  <header>
    <h1>Dr. Joe Coffey's School for PALS</h1>
    <h2>Interactive CPR Quiz</h2>
  </header>

  <div class="question" id="q1">
    <h3>What is the correct chest compression depth for a child during CPR?</h3>
    <div class="answers">
      <button onclick="checkAnswer(this, false)">A. At least 1 inch (2.5 cm)</button>
      <button onclick="checkAnswer(this, true)">B. About 1/3 the depth of the chest (~2 inches or 5 cm)</button>
      <button onclick="checkAnswer(this, false)">C. 4 cm</button>
      <button onclick="checkAnswer(this, false)">D. As deep as possible</button>
    </div>
    <div class="feedback" id="feedback1"></div>
  </div>

  <div class="question" id="q2">
    <h3>What does a sudden spike in EtCO₂ on the capnography waveform suggest?</h3>
    <div class="answers">
      <button onclick="checkAnswer(this, false)">A. Poor chest compressions</button>
      <button onclick="checkAnswer(this, false)">B. Airway obstruction</button>
      <button onclick="checkAnswer(this, true)">C. Return of spontaneous circulation (ROSC)</button>
      <button onclick="checkAnswer(this, false)">D. Hyperventilation</button>
    </div>
    <div class="feedback" id="feedback2"></div>
  </div>

  <script>
    function checkAnswer(button, isCorrect) {
      const buttons = button.parentElement.querySelectorAll('button');
      buttons.forEach(btn => btn.disabled = true);
      if (isCorrect) {
        button.classList.add('correct');
        button.parentElement.nextElementSibling.textContent = '✅ Correct!';
      } else {
        button.classList.add('incorrect');
        button.parentElement.nextElementSibling.textContent = '❌ Incorrect. Try reviewing this topic again!';
      }
    }
  </script>
