    }
    .answers button {
      display: block;
      margin: 10px 0;
      padding: 10px;
      width: 100%;
      font-size: 16px;
      border-radius: 8px;
      border: 1px solid #ddd;
      cursor: pointer;
    }
    .answers button:hover {
      background: #f0f0f0;
    }
